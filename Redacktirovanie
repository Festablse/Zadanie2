print("Часть 2 №1")
l_list = ["1", 2, 3, "2", 4, "1", 5, 2]
duplicat = []
for i in l_list:
    if l_list.count(i) > 1 and i not in duplicat:
        duplicat.append(i)
print("Повторяющиеся элементы в списке: ", duplicat)
print("------------------------------------------------------")
print("Часть 2 №3")
f = {"qwer":"tyu", "asd":"fgh", "zxc":"vbn"}
f = {i:j for j, i in f.items()}
print(f)
